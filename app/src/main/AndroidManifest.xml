<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.trend.ai">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:name=".AApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name=".view.ui.actitivy.trend.ImageDetailActivity">
        </activity>
        <!-- <activity android:name=".view.ui.actitivy.login.ChooseCategoryActivity"> -->
        <!-- </activity> -->
        <activity android:name=".view.ui.actitivy.login.ChooseLocationActivity">
        </activity>
        <activity
                android:name=".view.ui.actitivy.trend.TrendingActivity"
                android:theme="@style/MyMaterialTheme">
        </activity>
        <activity
                android:name=".view.ui.actitivy.menu.MenuLeftActivity"
                android:label="@string/title_activity_menu_left"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".view.ui.actitivy.login.LoginActivity">
        </activity>
        <activity
                android:name=".view.ui.actitivy.menu.MenuNormalActivity"
                android:label="@string/title_activity_menu_normal"
                android:theme="@style/AppTheme.NoActionBar">
        </activity> <!-- <activity android:name=".view.ui.actitivy.topic.FavorTopicActivity"> -->
        <!-- </activity> -->
        <!-- <activity android:name=".view.ui.actitivy.menu.MenuNormalActivity"> -->
        <!-- </activity> -->
        <activity
                android:name=".view.ui.actitivy.SplashActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
                android:name=".core.tweetcomposer.TweetFailureReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="com.twitter.sdk.android.tweetcomposer.UPLOAD_FAILURE"/>
            </intent-filter>
        </receiver>
        <receiver
                android:name=".core.tweetcomposer.TweetCancelReceiver"
                android:exported="false">
            <intent-filter>
                <action android:name="com.twitter.sdk.android.tweetcomposer.TWEET_COMPOSE_CANCEL"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>