<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_launcher"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_width="@dimen/tw__composer_close_size"
            android:layout_height="@dimen/tw__composer_close_size" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imvAva"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:textStyle="bold"
            android:textColor="#0e1316"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            app:layout_constraintTop_toTopOf="@+id/imvAva" app:layout_constraintStart_toEndOf="@+id/imvAva"
            android:layout_marginStart="10dp"/>
    <TextView
            android:textColor="#6b7d8b"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameScreen"
            app:layout_constraintTop_toTopOf="@+id/tvName" app:layout_constraintStart_toEndOf="@+id/tvName"
            android:layout_marginStart="3dp"/>
    <include
            layout="@layout/item_trend_videos_child_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/view2"
            android:background="#d6dbdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <View

            android:background="@color/trend_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:id="@+id/view7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"/>
    <com.google.android.exoplayer2.ui.PlayerView
            app:keep_content_on_player_reset="true"
            app:resize_mode="fixed_width"
            app:show_buffering="when_playing"
            app:surface_type="texture_view"
            app:use_controller="false"
            app:player_layout_id="@layout/toro_exo_player_view"
            android:minHeight="200dp"
            android:layout_width="0dp"
            android:layout_height="130dp" tools:srcCompat="@tools:sample/avatars[7]"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/tvContent">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/posterView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
        />
    </com.google.android.exoplayer2.ui.PlayerView>
    <TextView
            android:textColor="@color/trend_content"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvContent" app:layout_constraintStart_toStartOf="@+id/tvName"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"/>


</android.support.constraint.ConstraintLayout>