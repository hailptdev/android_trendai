<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_launcher"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_width="@dimen/tw__composer_close_size"
            android:layout_height="@dimen/tw__composer_close_size" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imvAva"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:textStyle="bold"
            android:textColor="#0e1316"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            app:layout_constraintTop_toTopOf="@+id/imvAva"
            app:layout_constraintStart_toEndOf="@+id/imvAva"
            android:layout_marginStart="10dp"/>
    <TextView
            android:textColor="#6b7d8b"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameScreen"
            app:layout_constraintTop_toTopOf="@+id/tvName" app:layout_constraintStart_toEndOf="@+id/tvName"
            android:layout_marginStart="5dp"/>
    <TextView
            android:textColor="@color/trend_content"
            android:text="British newspaper claims UK police have, in relation to the operation to arrest Julian Assange, \&quot;rented an apartment overlooking the Embassy's front door to keep the building under constant surveillance.\&quot; \n\nContext: https://t.co/I6FaDiDZ3o\n\nhttps://t.co/zOL6KoYkuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvContent" app:layout_constraintStart_toStartOf="@+id/tvName"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"/>
    <include
            layout="@layout/item_trend_comment_like_reload_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/view2"
            android:background="#d6dbdf"
            app:layout_constraintStart_toStartOf="@+id/tvContent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContent"/>
    <View

            android:background="@color/trend_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:id="@+id/view7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>